<div class="container">
  <div class="row">
    <div class="col">

      <table class="table table-bordered">
        <tr>
          <th>Title</th>
          <th>Content</th>
          <th>Edit</th>
          <th>Delete</th>
        </tr>
        <% @posts.each do |post| %>
          <tr>
            <td>
              <%= link_to post.title, admin_post_path(post) %>
            </td>
            <td>
              <%= post.content %>
            </td>
            <td>
              <%= link_to 'Edit', edit_admin_post_path(post), class: 'btn btn-info' %>
            </td>
            <td>
              <%= button_to 'Delete', [:admin, post], method: :delete, class: 'btn btn-danger' %>
            </td>
          </tr>
        <% end %>
      </table>
      <%= paginate @posts %>
    </div>
  </div>
</div>
